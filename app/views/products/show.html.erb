<div class="container">
  <h1><%= @product.name %></h1>
</div>

<div class="container d-flex">

  <div class="container border-solid">
    <div></div>
    <div></div>
    <div></div>
  </div>
  <div class="container">
    <p class="my-3 text-center"> <strong><%= @product.short_description %></strong> </p>
    <p><strong>Descripcion:</strong> <%= @product.long_description %></p>
    <p><strong>Dimensiones:</strong> <%= @product.product_diameter %></p>
    <p><strong>Proveedor:</strong> <%= @product.supplier.name %></p>
    <p><strong>Precios:</strong></p>
    
    
      <div class="d-flex">
        <%= @product.color %>: 
        <%= number_to_currency @product.price %>
      </div>
    
    <div class="d-flex align-items-center"><h2>Consultar:</h2> <%=link_to image_tag("whatsapp-icon.png"),"https://api.whatsapp.com/send?phone=541158622681" , class:"whatsapp-icon", target:"_blank" %></div>
    <div class="container text-center w-50">
      <p class="mt-5"><strong>Seleccionar...</strong></p>
      <div class="actions mb-2 flex-wrap">
        <a class="btn round-bordered incrementer minus disabled" data-offset="-1">-</a>
        <span id="counter" data-count="1">1</span>
        <a class="btn round-bordered incrementer" data-offset="1">+</a>
      </div>
      <%= form_tag cart_items_path, class:"d-flex flex-column text-center" do %>
        <%#= select_tag "product_id", options_from_collection_for_select(@product, :id, :color), class:"mb-3" %>
        <%= hidden_field_tag :product_id, @product.id %>
        <%= hidden_field_tag :quantity, 1 %>
        <%= submit_tag "AÃ±adir a carrito", class:"btn btn-primary rounded-pill" %>
      <% end %>   
    </div>
  </div>
</div>



