<h1><%= @product.name %></h1>
<p><%= @product.short_description %></p>
<p><strong>Descripcion:</strong> <%= @product.long_description %></p>
<p><strong>Proveedor:</strong> <%= @product.supplier.name %></p>


<% @product_variations.each do |product| %>

  <%= product.color %>
  <%= product.size %>
  <%= form_tag cart_items_path do %>
      <%= hidden_field_tag :product_id, @product.id  %>
      <%= hidden_field_tag :product_variation_id, product.id  %>
      <%= number_field_tag :quantity, 1 %>
      <%= submit_tag "ADD TO CART" %>
  <% end %>
<% end %>



